<!-- views/creators.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include your head partial or add necessary meta tags -->
    <title>Choose Creators</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-100 font-montserrat">
    <%- include('header-login') %>
    <!-- Main Container -->
    <div class="flex">
        
        <!-- Sidebar -->
        <aside class="w-1/4 bg-white p-6 shadow-md">
            
            <h2 class="text-xl font-bold mb-4 flex items-center justify-between">
                Filtrer vos créateurs         
            </h2>
            <!-- Filter Options -->
            <form action="/creators" method="GET">
                <input type="hidden" name="categories" id="selected-categories" />
                <input type="hidden" name="videoTypes" id="selected-video-types" />
                <input type="hidden" name="countries" id="selected-countries-input" />
                <input type="hidden" name="ageMin" id="selected-age-min" />
                <input type="hidden" name="ageMax" id="selected-age-max" />

                <div id="filters" class="space-y-6">
                    <!-- Category Filter -->
                    <h3 class="font-semibold mb-2 flex items-center justify-between">Catégorie</h3>
                    <div class="flex flex-wrap gap-2">
                        <% categories.forEach(function(category) { %>
                            <button type="button" class="filter-button px-3 py-1 bg-blue-500 text-white rounded-full text-sm focus:outline-none" data-filter="<%= category %>" data-filter-type="Category">
                                <%= category %>
                            </button>
                        <% }); %>
                    </div>
                    
                    <!-- Video Type Filter Buttons -->
                    <h3 class="font-semibold mb-2 flex items-center justify-between">Type de vidéo</h3>
                    <div class="flex flex-wrap gap-2">
                        <% videoTypes.forEach(function(type) { %>
                            <button type="button" class="filter-button px-3 py-1 bg-green-500 text-white rounded-full text-sm focus:outline-none" data-filter="<%= type %>" data-filter-type="Type of Videos">
                                <%= type %>
                            </button>
                        <% }); %>
                    </div>
                    <!-- Age Selector -->
                    <div>
                        <h3 class="font-semibold mb-2 flex items-center justify-between">Age</h3>
                        <!-- Age Inputs -->
                        <div class="flex items-center space-x-2">
                            <input type="number" id="age-min" class="w-20 px-2 py-1 border rounded" placeholder="Min" min="0" max="100" />
                            <span>-</span>
                            <input type="number" id="age-max" class="w-20 px-2 py-1 border rounded" placeholder="Max" min="0" max="100" />
                        </div>
                    </div>
                    <div>
                        <h3 class="font-semibold mb-2">Country</h3>
                        <div class="flex flex-wrap gap-2">
                            <% countries.forEach(function(country) { %>
                                <button type="button" class="filter-button px-3 py-1 bg-purple-500 text-white rounded-full text-sm focus:outline-none" data-filter="<%= country %>" data-filter-type="Country">
                                    <%= country %>
                                </button>
                            <% }); %>
                        </div>
                    </div>
                <!-- Filter Button -->
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded mt-4">Apply Filters</button>
                </form>
            </div>      
        </aside>
        <!-- Main Content -->
        <main class="w-3/4 p-6">
            <h1 class="text-2xl font-bold mb-6">Select Creators for Your Campaign</h1>
            <!-- Add a form around the creators grid -->
            <form action="/campaigns/select" method="POST" class="relative">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% creators.forEach(function(creator) { %>
                        <div class="creator-card bg-white rounded-lg shadow-md overflow-hidden relative cursor-pointer" data-creator-id="<%= creator._id %>">
                            <!-- Creator Image -->
                            <img src="<%= creator.profileImage %>" alt="<%= creator.name %>" class="w-full h-48 object-cover">
                            <!-- Portfolio Bubbles -->
                            <div class="flex justify-center -mt-6">
                                <% creator.portfolioImages.slice(0, 2).forEach(function(image) { %>
                                    <div class="bg-white p-1 rounded-full mx-1 shadow-lg">
                                        <img src="<%= image %>" alt="Portfolio Image" class="h-12 w-12 rounded-full object-cover">
                                    </div>
                                <% }); %>
                            </div>
                            <!-- Creator Info -->
                            <div class="p-4">
                                <h3 class="text-lg font-semibold mb-2"><%= creator.name %></h3>
                                <p class="text-gray-600 text-sm mb-4"><%= creator.description %></p>
                                <p class="text-gray-600 text-sm mb-4"><%= creator.country %></p>
                                <p class="text-gray-600 text-sm mb-4"><%= creator.age %></p>
                                <!-- Video Types -->
                                <div class="flex flex-wrap gap-2">
                                    <% creator.videoTypes.forEach(function(type) { %>
                                        <span class="px-2 py-1 bg-blue-500 text-white text-xs rounded-full"><%= type %></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <!-- Finalize Campaign Button -->
                <button type="submit" id="finalize-campaign-button" class="fixed bottom-4 right-4 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full shadow-lg hidden">
                    Finaliser la campagne
                </button>
            </form>
        </main>
    </div>

    <script src="js/filters.js"></script>
    <script src="/js/creatorSelection.js"></script>
</body>
</html>
