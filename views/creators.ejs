<!-- views/creators.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Include your head partial or add necessary meta tags -->
    <title>Choisir ses créateurs - Scalevision</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-50 font-montserrat">
    <%- include('header-login') %>
    <!-- Main Container -->
    <div class="flex min-h-screen">
        
        <!-- Sidebar -->
        <aside class="w-1/5 p-4 bg-white border-r border-gray-300 sticky top-[4rem] h-screen overflow-y-auto">
            <!-- Form starts here -->
            <form action="/creators" method="GET">
                <input type="hidden" name="categories" id="selected-categories" />
                <input type="hidden" name="videoTypes" id="selected-video-types" />
                <input type="hidden" name="countries" id="selected-countries-input" />
                <input type="hidden" name="ageMin" id="selected-age-min" />
                <input type="hidden" name="ageMax" id="selected-age-max" />
        
                <!-- Header with Rechercher and Filtrer button -->
                <div class="flex items-center justify-between bg-white rounded shadow p-2 mb-6">
                    <h2 class="text-lg font-semibold text-blue-950">
                        Rechercher
                    </h2>
                    <button type="submit" class="shadow bg-blue-950 hover:bg-blue-800 text-white font-semibold px-4 py-1 rounded">
                        Filtrer
                    </button>
                </div>
        
                <!-- Filter Options -->
                <div id="filters" class="space-y-6">
                    <!-- Category Filter -->
                    <div>
                        <h3 class="font-semibold mb-2 text-blue-950">Catégorie</h3>
                        <div class="flex flex-wrap gap-2">
                            <% categories.forEach(function(category) { %>
                                <button type="button" class="filter-button shadow-md px-3 py-1 bg-white text-blue-950 rounded-full hover:text-white hover:bg-blue-950 text-sm focus:outline-none" data-filter="<%= category %>" data-filter-type="Category">
                                    <%= category %>
                                </button>
                            <% }); %>
                        </div>
                    </div>
                    
                    <!-- Video Type Filter Buttons -->
                    <div>
                        <h3 class="font-semibold mb-2 flex text-blue-950">Type de vidéo</h3>
                        <div class="flex flex-wrap gap-2">
                            <% videoTypes.forEach(function(type) { %>
                                <button type="button" class="filter-button shadow-md px-3 py-1 bg-white text-blue-950 rounded-full text-sm hover:text-white hover:bg-blue-950 focus:outline-none" data-filter="<%= type %>" data-filter-type="Type of Videos">
                                    <%= type %>
                                </button>
                            <% }); %>
                        </div>
                    </div>
        
                    <!-- Age Selector -->
                    <div>
                        <h3 class="font-semibold mb-2 text-blue-950">Age</h3>
                        <!-- Age Inputs -->
                        <div class="flex items-center space-x-2">
                            <input type="number" name="ageMin2" id="age-min" class="w-20 px-2 py-1 border rounded" placeholder="Min" min="0" max="100" value="0" />
                            <span>-</span>
                            <input type="number" name="ageMax2" id="age-max" class="w-20 px-2 py-1 border rounded" placeholder="Max" min="0" max="99" value="99" />
                        </div>
                    </div>
        
                    <!-- Country Filter -->
                    <div>
                        <h3 class="font-semibold text-blue-950 mb-2">Pays</h3>
                        <div class="flex flex-wrap gap-2">
                            <% countries.forEach(function(country) { %>
                                <button type="button" class="filter-button shadow-md px-3 py-1 bg-white text-blue-950 rounded-full hover:text-white hover:bg-blue-950 text-sm focus:outline-none" data-filter="<%= country %>" data-filter-type="Country">
                                    <%= country %>
                                </button>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </form>
            <!-- Form ends here -->
        </aside>
        <!-- Main Content -->
        <main class="w-4/5">
            <div class="sticky top-[4rem] z-20 bg-white p-3 border-b border-gray-300">
                <div id="selected-filters-container" class="flex flex-wrap space-x-2">
                    <!-- Selected filters will be displayed here as bubbles -->
                </div>
                <h1 class="text-l text-blue-950 font-semibold">Séléctionner les créateurs pour votre campagne<img src="/images/bas2.png" alt="Account Icon" class="inline-block w-8" style="vertical-align: middle"></h1>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3 p-3 overflow-y-auto">
                <% creators.forEach(function(creator) { %>
                  <div class="creator-card bg-white hover:bg-gray-50 rounded-lg shadow-md overflow-hidden relative" data-creator-id="<%= creator._id %>">
                    <!-- Creator Image -->
                    <a href="/creators/<%= creator._id %>"> 
                        <img src="<%= creator.profileImage %>" alt="<%= creator.name %>" class="w-full h-48 object-cover">
                    </a>
              
                    <!-- Portfolio Bubbles -->
                    <div class="flex justify-center -mt-6">
                      <% creator.portfolioImages.slice(0, 3).forEach(function(image) { %>
                        <div class="bg-white p-1 rounded-full mx-1 shadow-lg">
                          <img
                            src="<%= image %>"
                            alt="Portfolio Image"
                            class="h-12 w-12 rounded-full object-cover portfolio-image"
                            data-image-url="<%= image %>"
                            tabindex="0"
                            loading="lazy"
                          >
                        </div>
                      <% }); %>
                    </div>
              
                    <!-- Creator Info -->
                    <div class="p-4">
                      <!-- Creator Name -->
                      <a href="/creators/<%= creator._id %>">
                        <h3 class="text-lg font-semibold text-blue-950 mb-2"><%= creator.name %></h3>
                      </a>
              
                      <!-- Creator Age -->
                      <p class="text-gray-600 text-sm mb-4"><%= creator.age %> ans</p>
              
                      <!-- Creator Country -->
                      <div class="flex flex-wrap items-center gap-2 mb-4">
                        <span class="px-2 py-1 bg-blue-100 text-blue-500 text-xs rounded-full"><%= creator.country %></span>
                      </div>
              
                      <!-- Video Types and Add to Basket Button -->
                      <div class="flex items-center justify-between">
                        <!-- Video Types -->
                        <div class="flex flex-wrap gap-2">
                          <% creator.videoTypes.forEach(function(type) { %>
                            <span class="px-2 py-1 bg-green-100 text-green-500 text-xs rounded-full"><%= type %></span>
                          <% }); %>
                        </div>
              
                        <!-- Add to Basket Button -->
                        <form action="/add-to-campaign" method="POST">
                          <input type="hidden" name="creatorId" value="<%= creator._id %>">
                          <button type="submit" class="flex hover:shadow-md items-center text-sm font-medium rounded-lg transition duration-200 text-blue-950 focus:outline-none">
                            <img src="/images/panier.png" alt="Ajouter au panier" class="w-6 h-6">
                          </button>
                        </form>
                      </div>
                    </div>
                   
                  </div>
                
                <% }); %>
              </div>
               
        </main>
    </div>
    <!-- Enlarged Image Overlay -->
    <div id="image-overlay" class="fixed inset-0 flex items-center justify-center hidden z-50 transition-opacity duration-300">
        <button id="overlay-close" class="absolute top-4 right-4 text-white text-2xl focus:outline-none">&times;</button>
        <img id="enlarged-image" src="" alt="Enlarged Portfolio Image" class="max-w-md max-h-md rounded-lg object-contain rounded-lg">
    </div>

    
    <script src="js/filters.js"></script>
    <script src="/js/creatorSelection.js"></script>
    <script src="/js/imageEnlarge.js"></script>
</body>
</html>
