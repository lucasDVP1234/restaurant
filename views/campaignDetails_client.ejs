<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Votre Campagne</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('header-login') %>

    <!-- Main Container -->
    <div class="flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-lg bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            <h1
                data-aos="fade-up"
                class="relative mb-6 text-4xl text-center font-bold text-transparent bg-clip-text bg-blue-950 drop-shadow-lg"
                >Dernière  
                
                
                <!-- Parent span with relative positioning and padding -->
                <span class="relative inline-block px-4 py-2">
                    
                    <!-- Background span with white color, rounded corners, and rotation -->
                    <span class="absolute inset-0 bg-blue-500 rounded-lg transform -rotate-2 z-0 drop-shadow-lg"></span>
                    
                    <!-- Text span positioned above the background -->
                    <span class="relative font-semibold text-4xl text-white z-10">
                        Truc</span>
                    
                </span>
                
                
                <!-- Decorative underline with relief effect -->
            </h1>

            <!-- Campaign Form -->
            <form action="/campaigns/create" method="POST" class="space-y-6">
                
                

                <!-- Campaign Date Section -->
                <div>
                    <label for="campaignDate" class="block text-sm font-medium text-gray-700">Deadline de Campagne</label>
                    <div class="mt-1">
                        <input type="date" name="campaignDate" id="campaignDate" required
                            class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out">
                    </div>
                </div>

                <!-- Selected Creators Section -->
                <% if (selectedCreators && selectedCreators.length > 0) { %>
                    <div>
                        <h2 class="text-lg font-medium text-gray-700 mb-2">Créateurs Sélectionnés</h2>
                        <div class="flex flex-wrap -m-2">
                            <% selectedCreators.forEach(function(creator) { %>
                                <div class="w-24 h-24 m-2 relative">
                                    <img src="<%= creator.profileImage %>" alt="Profile Image" class="w-full h-full shadow-lg object-cover rounded-full border-2 border-gray-50">
                                    <h2 class="flex-wrap text-center text-lg font-medium text-gray-700 mb-2"><%= creator.name %></h2>
                                </div>
                                
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="w-full mt-12 flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white font-semibold bg-blue-950 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                        Créer Votre Campagne
                    </button>
                </div>
            </form>
        </div>
    </div>

    
</body>
</html>
