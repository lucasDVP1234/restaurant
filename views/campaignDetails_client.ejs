<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Votre Campagne</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('header-login') %>

    <!-- Main Container -->
    <div class="flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-lg bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Complétez Votre Campagne</h1>

            <!-- Campaign Form -->
            <form action="/campaigns/create" method="POST" class="space-y-6">
                <!-- Budget Section -->
                <div>
                    <label for="budget" class="block text-sm font-medium text-gray-700">Budget Publicitaire</label>
                    <div class="mt-1">
                        <input type="number" name="budget" id="budget" placeholder="Budget publicitaire en EUR" required
                            class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out">
                    </div>
                </div>

                <!-- Campaign Date Section -->
                <div>
                    <label for="campaignDate" class="block text-sm font-medium text-gray-700">Deadline de Campagne</label>
                    <div class="mt-1">
                        <input type="date" name="campaignDate" id="campaignDate" required
                            class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out">
                    </div>
                </div>

                <!-- Selected Creators Section -->
                <% if (selectedCreators && selectedCreators.length > 0) { %>
                    <div>
                        <h2 class="text-lg font-medium text-gray-700 mb-2">Créateurs Sélectionnés</h2>
                        <div class="flex flex-wrap -m-2">
                            <% selectedCreators.forEach(function(creator) { %>
                                <div class="w-24 h-24 m-2 relative">
                                    <img src="<%= creator.profileImage %>" alt="Profile Image" class="w-full h-full object-cover rounded-full border-2 border-blue-500">
                                    <span class="absolute bottom-0 right-0 bg-blue-500 text-white text-xs rounded-full px-1">✔️</span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-950 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                        Créer Votre Campagne
                    </button>
                </div>
            </form>
        </div>
    </div>

    
</body>
</html>
