<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= creator.name %> - Profil</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-50 font-montserrat">
    <%- include('header-login') %>
    <!-- Main Content Container -->
    <div class="max-w-lg mx-auto px-4 py-12">
        <!-- Profile Card with Cover Image -->
        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
            <!-- Cover Image Section -->
            <div class="relative">
                <% if (creator.portfolioImages && creator.portfolioImages.length > 0) { %>
                    <img src="<%= creator.portfolioImages[0] %>" alt="Cover Image" class="w-full h-48 object-cover">
                <% } else { %>
                    <!-- Default Cover Image if none provided -->
                    <img src="/images/default-cover.jpg" alt="Default Cover Image" class="w-full h-48 object-cover">
                <% } %>
                <!-- Profile Image Positioned in the Center -->
                <div class="absolute inset-x-0 bottom-0 transform translate-y-1/2 flex justify-center">
                    <div class="w-32 h-32">
                        <img src="<%= creator.profileImage %>" alt="<%= creator.name %>" class="w-full h-full rounded-full object-cover border-4 border-white shadow-md"
                             loading="lazy"
                             onerror="this.onerror=null; this.src='/images/default-profile.png'">
                    </div>
                </div>
            </div>
            <!-- Spacer to accommodate the overlapping profile image -->
            <div class="mt-16 px-6 pb-6">
                <!-- Creator Name -->
                <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center"><%= creator.name %></h1>
                <!-- Age and Country -->
                <div class="flex items-center justify-center space-x-4 mt-2">
                    <p class="text-gray-600 text-lg flex items-center">
                        <img src="/images/15.png" alt="Âge" class="w-5 h-5 mr-2">
                        <%= creator.age %> ans
                    </p>
                    <p class="text-gray-600 text-lg flex items-center">
                        <img src="/images/10.png" alt="Pays" class="w-5 h-5 mr-2">
                        <%= creator.country %>
                    </p>
                </div>
                <!-- Description -->
                <p class="mt-6 text-gray-700 text-center leading-relaxed"><%= creator.description %></p>
                <!-- Video Types -->
                <div class="flex flex-wrap justify-center gap-2 mt-6">
                    <% creator.videoTypes.forEach(function(type) { %>
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full"><%= type %></span>
                    <% }); %>
                </div>
                <!-- Ajouter à ma campagne Button -->
                <div class="flex justify-center mt-6">
                    <form action="/add-to-campaign" method="POST">
                      <input type="hidden" name="creatorId" value="<%= creator._id %>">
                      <button type="submit" class="shadow bg-blue-950 hover:bg-blue-800 text-white font-semibold px-6 py-2 rounded-full transition duration-300">
                        Ajouter à ma campagne
                      </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-md overflow-hidden mt-6">
            <!-- Section Title -->
            <div class="px-6 pt-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Portfolio Vidéos</h2>
            </div>
            <!-- Video Grid -->
            <div class="px-6 pb-6">
                <div id="video-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                    <% 
                        // Determine how many videos to show initially
                        const initialVideos = 6;
                        const totalVideos = creator.portfolioImages.length;
                        const videosToShow = creator.portfolioImages.slice(0, initialVideos); // Assuming first image is cover
                    %>
                    <% videosToShow.forEach(function(videoUrl, index) { %>
                        <div class="bg-gray-100 rounded-lg overflow-hidden shadow">
                            <div class="relative">
                                <video id="video-<%= index %>" class="w-full h-auto" controls preload="none">
                                    <source src="<%= videoUrl %>" type="video/mp4">
                                    Votre navigateur ne supporte pas la lecture de vidéos.
                                </video>
                                <button 
                                    class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white opacity-0 hover:opacity-100 transition-opacity duration-300"
                                    onclick="startVideo('video-<%= index %>')">
                                    Start
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <!-- Show More Button -->
                <% if (totalVideos > initialVideos) { %>
                    <div class="flex justify-center mt-6">
                        <button id="show-more-button" class="shadow bg-blue-950 hover:bg-blue-800 text-white font-semibold px-6 py-2 rounded-full transition duration-300">
                            Afficher Plus
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Optional Footer -->
    <!-- Include any necessary scripts -->
    <script>
        // Function to start/play the video
        function startVideo(videoId) {
            const video = document.getElementById(videoId);
            if (video.paused) {
                video.play();
            } else {
                video.pause();
            }
        }

        // Show More Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const showMoreButton = document.getElementById('show-more-button');
            if (showMoreButton) {
                showMoreButton.addEventListener('click', function() {
                    // Fetch all video URLs except the ones already displayed
                    const allVideos = JSON.stringify(creator.portfolioImages.slice(initialVideos + 1));
                    const videoGrid = document.getElementById('video-grid');
                    const currentCount = videoGrid.children.length;
                    const nextVideos = allVideos.slice(currentCount, currentCount + initialVideos);

                    nextVideos.forEach(function(videoUrl, index) {
                        const videoIndex = currentCount + index;
                        const videoContainer = document.createElement('div');
                        videoContainer.className = 'bg-gray-100 rounded-lg overflow-hidden shadow';

                        const videoElement = document.createElement('video');
                        videoElement.id = `video-${videoIndex}`;
                        videoElement.className = 'w-full h-auto';
                        videoElement.controls = true;
                        videoElement.preload = 'none';

                        const sourceElement = document.createElement('source');
                        sourceElement.src = videoUrl;
                        sourceElement.type = 'video/mp4';

                        videoElement.appendChild(sourceElement);
                        videoElement.innerHTML += 'Votre navigateur ne supporte pas la lecture de vidéos.';

                        const button = document.createElement('button');
                        button.className = 'absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white opacity-0 hover:opacity-100 transition-opacity duration-300';
                        button.textContent = 'Start';
                        button.onclick = function() { startVideo(`video-${videoIndex}`); };

                        const relativeDiv = document.createElement('div');
                        relativeDiv.className = 'relative';
                        relativeDiv.appendChild(videoElement);
                        relativeDiv.appendChild(button);

                        videoContainer.appendChild(relativeDiv);
                        videoGrid.appendChild(videoContainer);
                    });

                    // Hide the Show More button if no more videos to show
                    if (currentCount + nextVideos.length >= allVideos.length) {
                        showMoreButton.style.display = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>