<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Job'Ster - Connexion Étudiant</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-r from-gray-50 to-blue-50 min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('header-logo') %>

    <!-- Flash Messages -->
    <div class="container mx-auto px-4">
        <% if (success_messages && success_messages.length > 0) { %>
            <% success_messages.forEach(function(message){ %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded my-2">
                    <span><%= message %></span>
                </div>
            <% }) %>
        <% } %>
        <% if (error_messages && error_messages.length > 0) { %>
            <% error_messages.forEach(function(message){ %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded my-2">
                    <span><%= message %></span>
                </div>
            <% }) %>
        <% } %>
    </div>

    <!-- Title -->
    <h1 class="text-3xl mt-10 text-center font-bold md:mb-2 text-blue-950">
        Trouvez un
        <span class="relative inline-block">
            <span class="absolute inset-0 bg-orange-500 rounded-lg transform -rotate-2 z-0"></span>
            <span class="relative font-semibold text-3xl text-white z-10 px-4 py-2">Job</span>
        </span> pour cette semaine
    </h1>
    <h1 class="text-xl text-center font-bold mb-2 text-blue-950">
        <span class="relative inline-block">
            <span class="absolute inset-0 bg-orange-500 rounded-lg transform -rotate-2 z-0"></span>
            <span class="relative font-semibold text-3xl text-white z-10 px-4 py-2">en 15 minutes !</span>
        </span>
        
    
    </h1>
    

    <!-- Main Content -->
    <div class="flex items-center justify-center py-6 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            <h1 class="text-2xl font-bold text-blue-950 mb-6 text-center">Connectez-vous</h1>

            <!-- Login Form -->
            <form action="/login/student" method="POST" class="space-y-6">
                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-gray-700 font-medium mb-2">Email :</label>
                    <input type="email" name="email" id="email" placeholder="Email" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                </div>

                <!-- Password Field -->
                <div>
                    <label for="password" class="block text-gray-700 font-medium mb-2">Mot de Passe :</label>
                    
                    <input type="password" name="password" id="password" placeholder="Mot de Passe" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                    <div class="text-right">
                        <a href="#" id="forgot-password-link" class="text-sm text-blue-500 hover:text-blue-700">
                            Mot de passe oublié ?
                        </a>
                    </div>
                    <!-- Texte supplémentaire caché initialement -->
                    <div id="forgot-password-text" class="mt-2 text-sm text-gray-600 hidden">
                        Contactez-nous à <a href="mailto:contact@jobster.com" class="text-blue-500 hover:underline">contact@jobster.com</a>
                    </div>
                </div>
                

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full transform hover:scale-105 hover:rotate-1 bg-orange-600 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-md shadow-lg transition duration-200 ease-in-out">
                    Connexion
                </button>
            </form>

