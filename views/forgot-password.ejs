<!-- views/forgot-password.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Mot de passe oublié</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-r from-gray-50 to-blue-50 min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('header-logo') %>

    <!-- Main Content -->
    <div class="flex items-center justify-center py-6 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            <h1 class="text-2xl font-bold text-blue-950 mb-6 text-center">Mot de passe oublié</h1>

            <!-- Form -->
            <form action="/forgot-password" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="block text-gray-700 font-medium mb-2">Votre adresse email :</label>
                    <input type="email" name="email" id="email" placeholder="Email" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                </div>

                <button type="submit"
                    class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-4 rounded-md shadow-lg transition duration-200 ease-in-out">
                    Réinitialiser le mot de passe
                </button>
            </form>
        </div>
    </div>
</body>
</html>
