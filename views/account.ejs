<!DOCTYPE html>
<html lang="en">
<head>
    <title>Votre compte</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <style>
        /* Animation for active status */
        .active-status {
            animation: pulse-blue 3s infinite;
        }

        @keyframes pulse-blue {
            0%, 100% {
                box-shadow: 0 0 0 0 rgba(66, 153, 225, 0.4);
            }
            50% {
                box-shadow: 0 0 0 10px rgba(66, 153, 225, 0);
            }
        }
    </style>
</head>
<body class="bg-gray-100 font-montserrat">
    <%- include('header-login') %>
    <div class="container mx-auto px-4 py-12">
        <div class="bg-white p-8 rounded-lg shadow-md">
            <h1 class="text-3xl font-semibold mb-4">Bienvenu, <%= user.companyName %></h1>
            <h2 class="text-xl text-gray-700 mb-8">Compte : <%= user.email %></h2>

            <div class="mb-12">
                <h3 class="text-2xl font-semibold mb-6 text-center">État de la dernière campagne</h3>
                <div class="grid grid-cols-4 gap-8 items-center justify-items-center">
                    <% if (campaigns.length > 0) { %>
                        <% let lastCampaign = campaigns[campaigns.length - 1]; %>
                        <div class="flex flex-col items-center">
                            <div class="relative w-20 h-20 rounded-full bg-red-500 <%= (lastCampaign.status === 'Pending') ? 'active-status' : '' %> flex items-center justify-center shadow-lg">
                                <span class="text-white font-bold text-lg">1</span>
                            </div>
                            <p class="mt-4 text-center">Campagne en attente de validation</p>
                            <% if (lastCampaign.status === 'Pending') { %>
                                <!-- Début de widget de lien Calendly -->
<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
<a href="" class="mt-2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded inline-block text-center" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/scalevision/point-avec-lucie?hide_event_type_details=1&hide_gdpr_banner=1'});return false;">Réserver un appel</a>
<!-- Fin de widget de lien Calendly -->
        
                            <% } %>
                            
                        </div>
                    <% } %>
            
                    <!-- Dot 2: En attente des scripts -->
                    <div class="flex flex-col items-center">
                        <div class="relative w-20 h-20 rounded-full bg-yellow-500 <%= (campaigns.status === 'waiting_scripts') ? 'active-status' : '' %> flex items-center justify-center shadow-lg">
                            <span class="text-white font-bold text-lg">2</span>
                        </div>
                        <p class="mt-4 text-center">En attente des scripts</p>
                    </div>
            
                    <!-- Dot 3: Tournage en cours -->
                    <div class="flex flex-col items-center">
                        <div class="relative w-20 h-20 rounded-full bg-blue-500 <%= (campaigns.status === 'shooting_in_progress') ? 'active-status' : '' %> flex items-center justify-center shadow-lg">
                            <span class="text-white font-bold text-lg">3</span>
                        </div>
                        <p class="mt-4 text-center">Tournage en cours</p>
                    </div>
            
                    <!-- Dot 4: Valider les vidéos -->
                    <div class="flex flex-col items-center">
                        <div class="relative w-20 h-20 rounded-full bg-green-500 <%= (campaigns.status === 'validate_videos') ? 'active-status' : '' %> flex items-center justify-center shadow-lg">
                            <span class="text-white font-bold text-lg">4</span>
                        </div>
                        <p class="mt-4 text-center">Valider les vidéos</p>
                        <% if (campaigns.status === 'validate_videos') { %>
                            <button class="mt-2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Voir les vidéos</button>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Campaigns Section -->
            <div class="mb-12">
                <h3 class="text-2xl font-semibold mb-6 text-center">Vos campagnes</h3>
                <% if (campaigns.length > 0) { %>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead>
                                <tr>
                                    <th class="px-6 py-3 border-b text-left text-sm font-medium text-gray-500 uppercase">Créateurs</th>
                                    <th class="px-6 py-3 border-b text-left text-sm font-medium text-gray-500 uppercase">Nombre de créateurs</th>
                                    <th class="px-6 py-3 border-b text-left text-sm font-medium text-gray-500 uppercase">Budget</th>
                                    <th class="px-6 py-3 border-b text-left text-sm font-medium text-gray-500 uppercase">Date de la campagne</th>
                                    <th class="px-6 py-3 border-b text-left text-sm font-medium text-gray-500 uppercase">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% campaigns.forEach(function(campaign) { %>
                                    <tr>
                                        <td class="px-6 py-4 border-b text-sm text-gray-700"><%= campaign.creators %></td>
                                        <td class="px-6 py-4 border-b text-sm text-gray-700"><%= campaign.creatorCount %></td>
                                        <td class="px-6 py-4 border-b text-sm text-gray-700"><%= campaign.budget %></td>
                                        <td class="px-6 py-4 border-b text-sm text-gray-700"><%= campaign.date %></td>
                                        <td class="px-6 py-4 border-b text-sm text-gray-700"><%= campaign.status %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-gray-600">Vous n'avez pas de campagne prévu.</p>
                <% } %>
            </div>

            <!-- Set Password Form -->
            <div class="bg-gray-50 p-6 rounded-lg">
                <h2 class="text-2xl font-semibold mb-4">Ajouter un mot de passe</h2>
                <form action="/set-password" method="POST" class="space-y-4">
                    <input type="password" name="password" placeholder="New Password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded">Ajouter un mot de passe</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
