<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Votre compte</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <style>
        /* Animation for active status */
        .active-status {
            animation: pulse-blue 3s infinite;
        }

        @keyframes pulse-blue {
            0%, 100% {
                box-shadow: 0 0 0 0 rgba(66, 153, 225, 0.4);
            }
            50% {
                box-shadow: 0 0 0 10px rgba(66, 153, 225, 0);
            }
        }
    </style>
</head>
<body class="bg-gray-50 font-montserrat">
    <%- include('header-login') %>
    <div class="container mx-auto px-4 py-12">
        <div class="bg-gray-50 p-10 ">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Bienvenue, <span class="text-orange-500"><%= user.name %></span></h1>
            <h2 class="text-lg text-gray-600 mb-4">Compte : <%= user.email %></h2>
            <% if (user && user.userType === 'restaurant') { %>
                <h2 class="text-2xl font-bold text-orange-500">Restaurant : <%= user.companyName %> </h2>
              
              <% } else { %>
                <h2 class="text-lg text-gray-600">Étudiant</h2>
            <% } %>
            <% if (user && user.userType === 'restaurant') { %>
                <div class="mb-4 mt-4">
                  <a href="/jobs/add" class="inline-flex transform hover:scale-105 hover:rotate-3 items-center mr-2 px-6 py-2 text-sm hover:bg-orange-700 font-medium rounded-lg transition duration-200 shadow-sm
                    bg-orange-500 text-white"><img src="/images/plus.png" alt="Mes créateurs favoris" class="w-5 h-5 mr-2">
                    Ajouter un Job
                  </a>
                  <a href="/jobs/edit" class="inline-flex transform hover:scale-105 hover:rotate-3 items-center px-6 py-2 text-sm hover:bg-orange-700 font-medium rounded-lg transition duration-200 shadow-sm
                    bg-orange-500 text-white"><img src="/images/11_1.png" alt="Mes créateurs favoris" class="w-5 h-5 mr-2">
                    Modifier un Job
                  </a>
                
                  
                </div>
              <% } %>
            <!-- New Campaign Status Block -->
        
            <% if (user && user.userType === 'restaurant') { %>
            <div class="mb-16">
                <h3 class="text-2xl font-semibold text-center text-gray-700 mb-8">Vos Jobs créés</h3>
                <% if (jobs.length > 0) { %>
                  <div class="overflow-x-auto rounded-2xl shadow-md">
                    <table class="min-w-full bg-white rounded-2xl shadow-md">
                      <thead>
                        <tr>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Nom du Job</th>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Âge Requis</th>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Lieux</th>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Nombre de candidatures</th>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Voir les candidats</th>
                          <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% jobs.forEach(function(job) { %>
                          <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.name %></td>
                            <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.age %> ans</td>
                            <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.country %></td>
                            <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.applicants.length %></td>
                            <td class="px-6 py-4 border-b text-sm text-gray-700">
                              <% if (job.applicants.length > 0) { %>
                                <a href="/jobs/applicants/<%= job._id %>" class="text-blue-500 hover:underline">Voir les candidats</a>
                              <% } else { %>
                                Aucun candidat
                              <% } %>
                            </td>
                            <td class="px-6 py-4 border-b text-sm text-gray-700">
                              <a href="/jobs/edit?jobId=<%= job._id %>" class="text-blue-500 hover:underline">Modifier</a>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <p class="text-center text-gray-600">Vous n'avez pas encore créé de jobs.</p>
                <% } %>
                
              </div>
              <% } %>
              <% if (user && user.userType === 'student') { %>
                <div class="mb-16">
                  <h3 class="text-2xl font-semibold text-center text-gray-700 mb-8">Jobs auxquels vous avez postulé</h3>
                  <% if (jobs.length > 0) { %>
                    <div class="overflow-x-auto rounded-2xl shadow-md">
                      <table class="min-w-full bg-white rounded-2xl shadow-md">
                        <thead>
                          <tr>
                            <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Nom du Job</th>
                            <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Restaurant</th>
                            <th class="px-6 py-4 border-b text-left text-sm font-medium text-gray-500 uppercase">Statut</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% jobs.forEach(function(job) { %>
                            <tr class="hover:bg-gray-50">
                              <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.name %></td>
                              <td class="px-6 py-4 border-b text-sm text-gray-700"><%= job.createdBy.companyName %></td>
                              <td class="px-6 py-4 border-b text-sm text-gray-700">
                                <% if (job.selectedApplicant && job.selectedApplicant._id.toString() === user._id.toString()) { %>
                                  Sélectionné
                                <% } else { %>
                                  En attente
                                <% } %>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  <% } else { %>
                    <p class="text-center text-gray-600">Vous n'avez pas encore postulé à des jobs.</p>
                  <% } %>
                </div>
              <% } %>

            <!-- Set Password Form -->
            <div class="bg-white p-8 max-w-md rounded-2xl shadow-md">
                <h2 class="text-2xl font-semibold text-gray-700 mb-6">Modifier votre mot de passe</h2>
                <form action="/set-password" method="POST" class="space-y-6">
                    <div>
                        <input type="password" name="password" placeholder="Nouveau mot de passe" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" />
                    </div>
                    <div>
                        <input type="password" name="confirmPassword" placeholder="Confirmer le mot de passe" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" />
                    </div>
                    <button type="submit" class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 rounded-lg shadow-md transition duration-300">
                        Ajouter un mot de passe
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
