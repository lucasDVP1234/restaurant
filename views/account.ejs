<!-- views/account.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Account</title>
    <!-- Include Montserrat Font and CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.companyName %></h1>

        <!-- Logout Button -->
        <a href="/logout" class="logout-button">DÃ©connexion</a>

        <!-- Create New Campaign Button -->
        <a href="/creators" class="button primary-button">Create New Campaign</a>

        <!-- Campaigns Section -->
        <div class="card">
            <h2>Your Campaigns</h2>
            <% if (campaigns.length > 0) { %>
                <table class="campaigns-table">
                    <thead>
                        <tr>
                            <th>Creator Name</th>
                            <th>Scheduled Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% campaigns.forEach(function(campaign) { %>
                            <tr>
                                <td><%= campaign.creatorName %></td>
                                <td><%= new Date(campaign.schedule).toLocaleString() %></td>
                                <td><%= campaign.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>You have no campaigns scheduled.</p>
            <% } %>
        </div>

        <!-- Set Password Form -->
        <h2>Set Your Password</h2>
        <form action="/set-password" method="POST">
            <input type="password" name="password" placeholder="New Password" required />
            <input type="password" name="confirmPassword" placeholder="Confirm Password" required />
            <button type="submit">Set Password</button>
        </form>
    </div>
</body>
</html>
