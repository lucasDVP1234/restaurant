    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-4">
      <!-- Navigation Links -->
      <a href="/#les-createurs" class="flex items-center px-4 py-1 text-lg font-medium rounded-lg transition duration-200 text-blue-950 hover:bg-white">
        Les créateurs
      </a>
      <a href="/#le-fonctionnement" class="flex items-center px-4 py-1 text-lg font-medium rounded-lg transition duration-200 text-blue-950 hover:bg-white">
