      <a href="/#nous-comparer" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
        Les Tarifs
      </a>
      <!-- Call to Action Buttons -->
      <a href="#" class="flex items-center px-4 py-2 text-blue-950 text-sm font-medium bg-white rounded-lg transition duration-200 shadow-sm" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/scalevision/planifier-une-demonstration?hide_event_type_details=0&hide_gdpr_banner=1&text_color=092f6a&primary_color=092f6a'});return false;">
        <img src="/images/demo.png" alt="Démo" class="w-5 h-5 mr-2">
        Démo
      </a>
      <a href="/signup" class="flex items-center px-4 py-2 text-white text-sm font-medium bg-blue-950 rounded-lg transition duration-200 shadow-sm">
        <img src="/images/campagne.png" alt="Créer une campagne" class="w-5 h-5 mr-2">
        Créer une campagne
      </a>
      <a href="/signup" class="flex items-center px-4 py-2 text-white text-sm font-medium bg-blue-950 rounded-lg transition duration-200 shadow-sm">
        Inscription
      </a>
      <a href="/login" class="flex items-center px-4 py-2 text-blue-950 text-sm font-medium bg-white rounded-lg transition duration-200 shadow-sm">
        <img src="/images/11.png" alt="Connexion" class="w-5 h-5 mr-2">
        Connexion
      </a>
    </div>
  </nav>

  <!-- Toggle Mobile Menu Script -->
  <script>
    document.getElementById('mobile-menu-button').addEventListener('click', function () {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  </script>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
</header>
</body>
