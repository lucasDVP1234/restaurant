<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Modifier le Profil du Restaurant</title>
  <!-- Include Montserrat Font and Tailwind CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <!-- Header -->
  <%- include('header-login') %>

  <!-- Main Container -->
  <div class="container flex flex-col items-center justify-center mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8 text-center">Compléter le Profil du Restaurant</h1>
    <div class="w-full max-w-lg bg-white shadow-xl rounded-2xl p-8">
      

      <form action="/profilerestau" method="POST" enctype="multipart/form-data" class="space-y-6">
        <!-- Restaurant Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Nom du Restaurant</label>
          <input type="text" name="name" value="<%= restaurant.name %>" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm" required>
        </div>

        <!-- Manager Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Nom du Gérant</label>
          <input type="text" name="managerName" value="<%= restaurant.managerName %>" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm">
        </div>

        <!-- Emergency Phone -->
       
        <div>
          <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Numéro de Téléphone *</label>
          <input
            type="tel"
            id="emergencyPhone"
            name="emergencyPhone"
            value="<%= restaurant.emergencyPhone %>"
            pattern="^\d{10}$"
            title="Veuillez entrer un numéro de téléphone à 10 chiffres."
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm"
            required
          >
          <small class="text-gray-500">Entrez un numéro de téléphone à 10 chiffres</small>
        </div>

        <!-- SIREN -->
        <div>
          <label class="block text-sm font-medium text-gray-700">SIREN</label>
          <input type="text" name="siren" value="<%= restaurant.siren %>" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm">
        </div>

        <!-- Addresses -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Adresses</label>
          <textarea name="addresses" rows="3" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm"><%= restaurant.addresses ? restaurant.addresses.join('\n') : '' %></textarea>
          <small class="text-gray-500">Séparez chaque adresse par une nouvelle ligne.</small>
        </div>

        <!-- Email (Read-only) -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" name="email" value="<%= restaurant.email %>" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-gray-100" readonly>
        </div>

        <!-- Restaurant Picture -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Photo du Restaurant</label>
          <input type="file" name="restaurantPicture" accept="image/*" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm">
          <% if (restaurant.restaurantPictureUrl) { %>
            <img src="<%= restaurant.restaurantPictureUrl %>" alt="Photo du Restaurant" class="mt-4 h-32 w-32 object-cover rounded-md">
          <% } %>
        </div>

        <!-- Logo Upload -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Logo (Image)</label>
          <input type="file" name="logo" accept="image/*" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm">
          <% if (restaurant.logoUrl) { %>
            <img src="<%= restaurant.logoUrl %>" alt="Logo" class="mt-4 h-32 w-32 object-cover rounded-md">
          <% } %>
        </div>

        <!-- Submit Button -->
        <div>
          <button type="submit" class="w-full text-lg font-semibold flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-950 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
            Enregistrer les Modifications
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
