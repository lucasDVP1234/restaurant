<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Bouff'Job - Inscription</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-r from-gray-50 to-blue-50 min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('header-logo') %>

    <!-- Dynamic Title -->
    <% if (userType === 'restaurant') { %>
        <h1 class="text-3xl mt-10 text-center font-bold mb-2 text-blue-950">
            Proposez un
            <span class="relative inline-block">
                <span class="absolute inset-0 bg-orange-500 rounded-lg transform -rotate-2 z-0"></span>
                <span class="relative font-semibold text-3xl text-white z-10 px-4 py-2">Job</span>
            </span>
        </h1>
    <% } else if (userType === 'student') { %>
        <h1 class="text-3xl mt-10 text-center font-bold mb-2 text-blue-950">
            Trouvez un
            <span class="relative inline-block">
                <span class="absolute inset-0 bg-orange-500 rounded-lg transform -rotate-2 z-0"></span>
                <span class="relative font-semibold text-3xl text-white z-10 px-4 py-2">Job</span>
            </span>
        </h1>
    <% } %>

    <!-- Main Content -->
    <div class="flex items-center justify-center py-6 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            <h1 class="text-2xl font-bold text-blue-950 mb-6 text-center">Créez votre compte</h1>

            <!-- Signup Form -->
            <form action="/signup/<%= userType %>" method="POST" class="space-y-6">

                <% if (userType === 'restaurant') { %>
                    <!-- Company Name Field -->
                    <div>
                        <label for="companyName" class="block text-gray-700 font-medium mb-2">Nom du restaurant :</label>
                        <input type="text" name="companyName" id="companyName" placeholder="Nom du restaurant" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out">
                    </div>
                <% } else if (userType === 'student') { %>
                    <!-- Name Field -->
                    <div>
                        <label for="name" class="block text-gray-700 font-medium mb-2">Nom et Prénom :</label>
                        <input type="text" name="name" id="name" placeholder="Votre nom" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out">
                    </div>
                <% } %>
                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-gray-700 font-medium mb-2">Email :</label>
                    <input type="email" name="email" id="email" placeholder="exemple@gmail.com" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out">
                </div>

                <!-- Password Field -->
                <div>
                    <label for="password" class="block text-gray-700 font-medium mb-2">Créer un Mot de Passe :</label>
                    <input type="password" name="password" id="password" placeholder="Votre mot de passe" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out">
                </div>

                

                <input type="hidden" name="userType" value="<%= userType %>">

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-4 rounded-md shadow-lg transition duration-200 ease-in-out">
                    S'inscrire
                </button>
            </form>

            <% if (userType === 'student') { %>

            <!-- Divider -->
            <div class="mt-6 flex items-center">
                <div class="flex-grow border-t border-gray-300"></div>
                <span class="mx-4 text-gray-500">Ou</span>
                <div class="flex-grow border-t border-gray-300"></div>
            </div>

            <!-- Google Authentication -->
            <div class="mt-6">
                <a href="/auth/google"
                    class="w-full flex items-center justify-center bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 px-4 rounded-md shadow-sm transition duration-200 ease-in-out">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 488 512" xmlns="http://www.w3.org/2000/svg">
                        <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.2 0 123 24.5 166.3 64.9l-70.6 70.6C306.5 113.3 271.3 96 248 96c-92.3 0-168 75.7-168 168s75.7 168 168 168c90.6 0 138.6-59.4 143.4-108.4H248v-85.3h236c2.3 12.9 3.6 25.9 3.6 39.3z"/>
                    </svg>
                    S'inscrire avec Google
                </a>
            </div>
            <% } %>

            <!-- Login Link -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Vous avez déjà un compte ?
                    <a href="/login/<%= userType %>" class="text-orange-500 hover:underline font-medium">Connectez-vous ici</a>
                </p>
            </div>
        </div>
    </div>

</body>
</html>
