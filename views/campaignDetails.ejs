<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Compléter votre profil</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('header-login') %>

    <!-- Main Container -->
    <div class="flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-lg bg-white shadow-xl rounded-2xl p-8">
            <!-- Page Title -->
            
            <h1
                data-aos="fade-up"
                class="relative mb-6 text-4xl text-center font-bold text-transparent bg-clip-text bg-blue-950 drop-shadow-lg"
                >Compléter 
                
                
                <!-- Parent span with relative positioning and padding -->
                <span class="relative inline-block px-4 py-2">
                    
                    <!-- Background span with white color, rounded corners, and rotation -->
                    <span class="absolute inset-0 bg-blue-500 rounded-lg transform -rotate-2 z-0 drop-shadow-lg"></span>
                    
                    <!-- Text span positioned above the background -->
                    <span class="relative font-semibold text-4xl text-white z-10">
                        votre profil</span>
                    
                </span>
                
                
                <!-- Decorative underline with relief effect -->
            </h1>

            <!-- Campaign Details Form -->
            <form action="/campaigns/create" method="POST" class="space-y-6">
                <!-- Your Name -->
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Votre Nom et Prénom</label>
                    <input type="text" name="name" id="name" required 
                        class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" 
                        placeholder="Keyser Söze">
                </div>

                <!-- Your Job Title -->
                <div>
                    <label for="job" class="block text-sm font-medium text-gray-700">Votre Poste Actuel</label>
                    <input type="text" name="job" id="job" required 
                        class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" 
                        placeholder="Espion chez notre concurrent">
                </div>

                

                <!-- Selected Creators Section -->
                <% if (selectedCreators && selectedCreators.length > 0) { %>
                    <div>
                        <h2 class="text-lg font-medium text-gray-700 mb-2">Les Créateurs séléctionnés</h2>
                        <div class="flex flex-wrap -m-2">
                            <% selectedCreators.forEach(function(creator) { %>
                                <div class="w-24 h-24 m-2 relative">
                                    <img src="<%= creator.profileImage %>" alt="Profile Image" class="w-full h-full object-cover rounded-full border-2 border-gray-300">
                                    
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                        class="w-full flex justify-center py-3 px-4 text-white text-xl font-semibold border border-transparent rounded-md shadow-sm text-white bg-blue-950 hover:bg-blue-700 focus:outline-none transition duration-150 ease-in-out">
                        Passer à l'étape 2
                    </button>
                </div>
            </form>
        </div>
    </div>

  
</body>
</html>
