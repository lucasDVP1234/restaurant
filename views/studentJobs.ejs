<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Vos Candidatures</title>
  <!-- Include Montserrat Font and Tailwind CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('header-login') %>

    <!-- Main Container -->
    <div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <!-- Page Title -->
        <h1 class="text-3xl font-bold text-center text-blue-950 mb-8">Vos Candidatures</h1>

        <!-- Jobs Grid -->
        <% if (jobs.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% jobs.forEach(function(job) { %>
                    <div class="job-card bg-white hover:bg-gray-50 rounded-lg shadow-md overflow-hidden relative" data-job-id="<%= job._id %>">
                        <!-- Job Info -->
                        <div class="p-6">
                            <!-- Job Title -->
                            <h3 class="text-xl font-semibold text-blue-950 mb-4"><%= job.description %></h3>

                            <!-- Restaurant Name -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Restaurant :</strong> <%= job.createdBy.name %>
                            </p>

                            <!-- Job Date and Time -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Date :</strong> <%= job.dateAndTime.toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' }) %> à <%= job.dateAndTime.toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' }) %>
                            </p>

                            <!-- Job Duration -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Durée :</strong> <%= job.jobDuration %> heure(s)
                            </p>

                            <!-- Remuneration -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Rémunération :</strong> €<%= job.remuneration.toFixed(2) %>
                            </p>

                            <!-- Contract Type -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Type de Contrat :</strong> <%= job.contractType %>
                            </p>

                            <!-- Mission Type -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Mission :</strong> <%= job.mission %>
                            </p>

                            <!-- Minimum Age -->
                            <p class="text-gray-600 text-sm mb-1">
                                <strong>Âge Minimum :</strong> <%= job.minAge %> ans
                            </p>

                            <!-- Attire Required -->
                            <% if (job.attireRequired) { %>
                                <p class="text-gray-600 text-sm mb-1">
                                    <strong>Tenue Requise :</strong> <%= job.attireRequired %>
                                </p>
                            <% } %>

                            <!-- Profile Type -->
                            <% if (job.profileType) { %>
                                <p class="text-gray-600 text-sm mb-1">
                                    <strong>Profil Recherché :</strong> <%= job.profileType %>
                                </p>
                            <% } %>

                            <!-- Application Status -->
                            <p class="text-gray-600 text-sm mb-4">
                                <strong>Statut de la Candidature :</strong>
                                <% if (job.selectedApplicant && job.selectedApplicant.toString() === studentId.toString()) { %>
                                    <span class="text-green-500 font-semibold">Sélectionné</span>
                                <% } else { %>
                                    <span class="text-orange-500 font-semibold">En attente</span>
                                <% } %>
                            </p>

                            <!-- Optionally, you can add a button to withdraw application -->
                            <!--
                            <form action="/jobs/withdraw/<%= job._id %>" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir retirer votre candidature ?');">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Retirer Candidature</button>
                            </form>
                            -->
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center text-gray-600">Vous n'avez pas encore postulé à des jobs.</p>
        <% } %>
    </div>
</body>
</html>
