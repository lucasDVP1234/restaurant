<head>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    
  </head>
  <body>
  <header class="bg-gray-50 sticky top-0 z-50 border-b border-gray-300">
    <div class="container mx-auto px-8 py-3 flex items-center justify-between">
      <!-- Logo Section -->
      <div class="flex items-center transform hover:scale-105 hover:rotate-3">
        <a href="/">
          <img src="/images/kreator.png" alt="Company Logo" class="h-10 w-auto">
        </a>
        
      </div>
     
      
      <!-- Desktop Navigation -->
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-4">
      
        <% if (user && user.userType === 'restaurant') { %>
        <!-- Mes créateurs favoris -->
        <a href="#" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium text-white bg-orange-500 hover:bg-orange-700 rounded-lg transition duration-200 shadow-sm" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/scalevision/planifier-une-demonstration?hide_event_type_details=0&hide_gdpr_banner=1&text_color=092f6a&primary_color=092f6a'});return false;">
        
          
        
          
          <img src="/images/demobl.png" alt="Mes créateurs favoris" class="w-6 h-6 mr-1">
          Démo
        </a>
        <% } %>
        <% if (user && user.userType === 'student') { %>
          
        
        <!-- Créer une campagne -->
        <a href="/jobs" class="flex transform hover:scale-105 hover:rotate-3 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm
        <% if (currentUrl === '/jobs') { %>
          bg-white text-blue-950 ring-2 ring-orange-500
        <% } else { %>
          text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          <img src="/images/loupe.png" alt="Créer une campagne" class="w-6 h-6 mr-1">
          Trouver un job
        </a>
        
        <!-- Basket Icon -->
        <a href="/account" class="relative transform hover:scale-105 hover:rotate-3 flex items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500 focus:outline-none">
          <img src="/images/toc.png" alt="Panier" class="w-6 h-6 mr-1">Mes demandes
          
        </a>
      <% } %>

        <!-- Mon compte -->
        <a href="/account" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm
        <% if (currentUrl === '/account') { %>
          bg-white text-orange-950 ring-2 ring-orange-500
        <% } else { %>
          text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">
      
        </a>

        <!-- Déconnexion -->
        <a href="/logout" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm
        <% if (currentUrl === '/logout') { %>
          text-blue-950 text-white ring-2 ring-blue-500
        <% } else { %>
          text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          <img src="/images/10.png" alt="Déconnexion" class="w-6 h-6">
          
        </a>
      </nav>

  
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-orange-500 focus:outline-none">
          <!-- Menu Icon -->
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  
    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="md:hidden hidden bg-white shadow-sm">
      <div class="px-4 pt-4 pb-3 space-y-1">
        <!-- Demo Button (Optional: Include if needed in mobile menu) -->
        <a href="#" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/scalevision/planifier-une-demonstration?hide_event_type_details=0&hide_gdpr_banner=1&text_color=092f6a&primary_color=092f6a'});return false;">
          <img src="/images/demo.png" alt="Démo" class="w-5 h-5 mr-2">
          Démo
        </a>
  
        <!-- Create Campaign -->
        <a href="/jobs" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
          <img src="/images/15.png" alt="Créer une campagne" class="w-5 h-5 mr-2">
          Créer une campagne
        </a>
  
        <!-- Account -->
        <a href="/account" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
          <img src="/images/11.png" alt="Mon compte" class="w-5 h-5 mr-2">
          Mon compte
        </a>
  
        <!-- Logout -->
        <a href="/logout" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
          <img src="/images/10.png" alt="Déconnexion" class="w-5 h-5 mr-2">
          Déconnexion
        </a>
      </div>
    </nav>
  
    <!-- Toggle Mobile Menu Script -->
    <script>
      document.getElementById('mobile-menu-button').addEventListener('click', function () {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      });
    </script>
  </header>
  
  <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
  

</body>
  