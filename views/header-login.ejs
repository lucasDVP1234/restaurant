<!-- views/partials/header.ejs -->
<head>
  <!-- Include Montserrat Font and Tailwind CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>

<header class="bg-gray-100 sticky top-0 z-50 border-b border-gray-300">
  <div class="container mx-auto px-1 py-3 flex items-center justify-between ">
    <div class="flex items-center">
        <!-- Make logo clickable -->
        <a href="/">
            <img src="/images/logo3.png" alt="Company Logo" class="h-10 w-auto">
        </a>
    </div>
      <nav class="hidden md:flex space-x-6">
        <a href="/account" class="text-black-700 font-small hover:ring-2 hover:ring-offset-2 hover:ring-blue-500 text-sm items-center p-2 bg-white rounded shadow"><img src="/images/coeur.png" alt="Account Icon" class="  inline-block w-6" style="vertical-align: bottom;">Mes créateurs favoris</a>        
        <a href="/creators" class="text-black-700 font-small hover:ring-2 hover:ring-offset-2 hover:ring-blue-500 text-sm items-center p-2 bg-white rounded shadow"><img src="/images/3.png" alt="Account Icon" class="  inline-block w-6" style="vertical-align: middle;">Créer une campagne</a>
        <a href="/account" class="text-black-700 font-small hover:ring-2 hover:ring-offset-2 hover:ring-blue-500 text-sm items-center p-2 bg-white rounded shadow"><img src="/images/4.png" alt="Account Icon" class="  inline-block w-6" style="vertical-align: middle;">Mon compte </a>      
        <a href="/logout" class="text-black-700 font-small hover:ring-2 hover:ring-offset-2 hover:ring-blue-500 text-sm items-center p-2 bg-white rounded shadow"><img src="/images/2.png" alt="Account Icon" class="  inline-block w-6" style="vertical-align: middle;">Déconnexion</a>
      </nav>
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
          <button id="mobile-menu-button" class="text-gray-700 hover:text-blue-500 focus:outline-none">
              <!-- Menu Icon -->
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
          </button>
      </div>
  </div>
  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
          <a href="/account" class="block text-gray-700 hover:text-blue-500 font-medium">Mon compte</a>
      </div>
  </nav>
  <script>
      // Toggle Mobile Menu
      document.getElementById('mobile-menu-button').addEventListener('click', function () {
          const menu = document.getElementById('mobile-menu');
          menu.classList.toggle('hidden');
      });
  </script>
</header>
