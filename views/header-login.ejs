<!-- views/partials/header-login.ejs -->
<head>
  <!-- Include Montserrat Font and Tailwind CSS -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
<header class="bg-gray-50 sticky top-0 z-50 border-b border-gray-300">
  <div class="container mx-auto px-8 py-3 flex items-center justify-between">
      <!-- Logo Section -->
      <div class="flex items-center transform hover:scale-105 hover:rotate-3">
          <a href="/">
              <img src="/images/kreator.png" alt="Company Logo" class="h-10 w-auto">
          </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-4">
          <% if (user && user.userType === 'restaurant') { %>
              <!-- For Restaurants -->
              <a href="/jobs/my-jobs" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
                  <img src="/images/15.png" alt="Ajouter un Job" class="w-6 h-6 mr-1">
                  Voir mes Jobs
              </a>
              <!-- For Restaurants -->
              <a href="/jobs/add" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
                  <img src="/images/plusbleu.png" alt="Ajouter un Job" class="w-6 h-6 mr-1">
                  Ajouter un Job
              </a>
              <!-- For Restaurants -->
              <a href="/jobs/edit" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
                  <img src="/images/cray_bleu.png" alt="Ajouter un Job" class="w-6 h-6 mr-1">
                  Modifier un Job
              </a>
              <a href="/account" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
                  <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">
              </a>
          <% } else if (user && user.userType === 'student') { %>
              
              <a href="/favorite-jobs" class="flex transform hover:scale-105 hover:rotate-3 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
                <% if (currentUrl === '/favorite-jobs') { %>
                    bg-white text-blue-950 ring-2 ring-orange-500
                  <% } else { %>
                    text-blue-950 bg-white hover:ring-2 hover:ring-blue-500
                  <% } %>">
                  <img src="/images/12.png" alt="Trouver un Job" class="w-6 h-6 mr-1">
                  Mes Restaurants Favoris
              </a>
              <a href="/jobs" class="flex transform hover:scale-105 hover:rotate-3 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
              <% if (currentUrl === '/jobs') { %>
                bg-white text-blue-950 ring-2 ring-orange-500
              <% } else { %>
                text-blue-950 bg-white hover:ring-2 hover:ring-blue-500
              <% } %>">
                  <img src="/images/loupe.png" alt="Trouver un Job" class="w-6 h-6 mr-1">
                  Trouver un Job
              </a>
              <!-- For Students -->
              <a href="/my-applications" class="flex transform hover:scale-105 hover:rotate-3 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
              <% if (currentUrl === '/my-applications') { %>
                bg-white text-blue-950 ring-2 ring-orange-500
              <% } else { %>
                text-blue-950 bg-white hover:ring-2 hover:ring-blue-500
              <% } %>">
                <img src="/images/15.png" alt="Trouver un Job" class="w-6 h-6 mr-1">
                Mes Candidatures
            </a>
              <a href="/account" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500
                <% if (currentUrl === '/account') { %>
                    bg-white text-blue-950 ring-2 ring-orange-500
                  <% } else { %>
                    text-blue-950 bg-white hover:ring-2 hover:ring-blue-500
                  <% } %>">
                  <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">
              </a>
          <% } %>
          <!-- Logout -->
          <a href="/logout" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-sm text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
              <img src="/images/10.png" alt="Déconnexion" class="w-6 h-6">
          </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
          <button id="mobile-menu-button" class="text-gray-700 hover:text-orange-500 focus:outline-none">
              <!-- Menu Icon -->
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
          </button>
      </div>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobile-menu" class="md:hidden hidden bg-white shadow-sm">
      <div class="px-4 pt-4 pb-3 space-y-1">
          <% if (user && user.userType === 'restaurant') { %>
              <a href="/jobs/my-jobs" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                <img src="/images/loupe.png" alt="Ajouter un Job" class="w-5 h-5 mr-2">
                Voir mes jobs
              </a>
              <a href="/jobs/add" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/plus.png" alt="Ajouter un Job" class="w-5 h-5 mr-2">
                  Ajouter un Job
              </a>
              
              <a href="/jobs/edit" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/cray_bleu.png" alt="Ajouter un Job" class="w-5 h-5 mr-2">
                  Modifier un Job
              </a>
              <a href="/account" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/11.png" alt="Mon compte" class="w-5 h-5 mr-2">
                  Mon compte
              </a>
          <% } else if (user && user.userType === 'student') { %>
              <a href="/jobs" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/loupe.png" alt="Trouver un Job" class="w-5 h-5 mr-2">
                  Trouver un Job
              </a>
              <a href="/favorite-jobs" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/12.png" alt="Trouver un Job" class="w-5 h-5 mr-2">
                  Mes Restaurants Favoris
              </a>
              <a href="/my-applications" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/15.png" alt="Trouver un Job" class="w-5 h-5 mr-2">
                  Mes Candidatures
              </a>
              <a href="/account" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
                  <img src="/images/11.png" alt="Mon compte" class="w-5 h-5 mr-2">
                  Mon compte
              </a>
          <% } %>
          <a href="/logout" class="flex items-center px-4 py-2 text-gray-700 text-sm font-medium hover:bg-blue-50 rounded-lg transition duration-200">
              <img src="/images/10.png" alt="Déconnexion" class="w-5 h-5 mr-2">
              Déconnexion
          </a>
      </div>
  </nav>

  <!-- Toggle Mobile Menu Script -->
  <script>
      document.getElementById('mobile-menu-button').addEventListener('click', function () {
          const menu = document.getElementById('mobile-menu');
          menu.classList.toggle('hidden');
      });
  </script>
</header>
</body>
