<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Scalevision - Connexion</title>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-100 font-montserrat">
    
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
            <h1 class="text-2xl font-semibold text-center mb-6">Connectez-vous Ã  votre compte</h1>
            <form action="/login" method="POST" class="space-y-4">
                <div>
                    <label for="email" class="block text-gray-700">Email :</label>
                    <input type="email" name="email" id="email" placeholder="Email" required class="w-full rounded-md" />
                </div>
                <div>
                    <label for="password" class="block text-gray-700">Mot de Passe :</label>
                    <input type="password" name="password" id="password" placeholder="Password" required class="w-full rounded-md" />
                </div>
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded">Connexion</button>
            </form>
            <div class="text-center mt-6">
                <p class="text-gray-600">Ou</p>
                <a href="/auth/google" class="mt-4 inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded">
                    S'inscrire avec Google
                </a>
                <p class="mt-4 text-gray-600">Pas de mot de passe ? <a href="/signup" class="text-blue-500 hover:underline">Inscrivez-vous ici</a></p>
            </div>
        </div>
    </div>
</body>
</html>
